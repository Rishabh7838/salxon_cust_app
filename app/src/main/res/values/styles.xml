<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="CollapseAppbar" parent="@android:style/TextAppearance.Medium">

        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ExpandAppbar" parent="@android:style/TextAppearance.Material.Title">


        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    //Login screen styles
    <style name="Widget"/>

    <style name="Widget.TextInputLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/input_width</item>
        <item name="android:textColorHint">@color/color_input_hint</item>
    </style>

    <style name="Widget.TextEdit">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHighlight">@color/color_text_highlight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/color_input_hint</item>
        <item name="android:background">@drawable/state</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

    <style name="Widget.Hint">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Hint.signin">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Widget.TextInputLayout.signin">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/input_width</item>
        <item name="android:textColorHint">#616161</item>
    </style>

    <style name="Widget.TextEdit.signin">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHighlight">#424242</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">#616161</item>
        <item name="android:background">@drawable/state</item>
        <item name="android:textColor">#212121</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>


</resources>
