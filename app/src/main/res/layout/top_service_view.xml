<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/top_Service_Image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/background"
            android:scaleType="centerCrop"
            android:alpha="0.9"
            />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#f5f5f5"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <TextView
            android:id="@+id/topServiceDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of Service"
            android:id="@+id/topServiceName"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="#4f0e0d0e"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            />
                <ImageView
                    android:id="@+id/topServiceArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:clickable="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/particularTypeServices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:visibility="visible"/>

    </LinearLayout>
</android.support.v7.widget.CardView>