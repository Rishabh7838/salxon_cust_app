<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/customerSwipeLayout">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                map:cardCornerRadius="4dp"
                android:elevation="14dp"
                android:layout_margin="5sp"
                map:cardPreventCornerOverlap="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/driverInfo"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:src="@drawable/profile"
                        android:id="@+id/customerProfileImage"
                        android:padding="10sp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="40sp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/driverNameView"
                            android:paddingLeft="10sp"
                            android:paddingTop="20sp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/driveerNumberView"
                            android:paddingLeft="10sp"
                            android:paddingTop="20sp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/driveerCarView"
                            android:paddingLeft="10sp"
                            android:paddingTop="20sp"
                            android:textStyle="bold"
                            />
                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ratingbar1"
                            android:layout_gravity="center"
                            android:numStars="5"
                            android:stepSize="0.5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="end|bottom">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cancelRide"
                            android:text="Cancel Ride"

                            android:layout_marginLeft="24dp"
                            android:layout_marginBottom="5sp"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/callDriver"
                            android:text="Call Driver"
                            android:layout_marginLeft="24dp"
                            android:layout_marginBottom="5sp"
                            android:layout_marginTop="5sp"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/radioGroup"
                android:background="#fff">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regular"
                    android:id="@+id/DPX"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Standerd"
                    android:id="@+id/DPBlack"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium"
                    android:id="@+id/DPXL"
                    />
            </RadioGroup>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Find Salon"
                android:textStyle="bold"
                android:id="@+id/call"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottomSheetLayout"
    app:elevation="4dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#fff"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    >
    <include
        layout="@layout/offersbottomsheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
        </LinearLayout>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>
