<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardElevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/findSalonImage"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:src="@drawable/background"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <TextView
                android:id="@+id/findSalonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Of Salon"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textColor="#42a5f5"/>

            <TextView
                android:id="@+id/findSalonAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/findSalonName"
                android:text="Address : "
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/findSalonPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/findSalonAddress"
                android:text="Phone Number : "
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
            <RatingBar
                android:id="@+id/findSalonRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/findSalonAddress"
                android:layout_toRightOf="@+id/findSalonPhone"
                android:numStars="5"
                android:isIndicator="false"
                android:rating="1"
                android:stepSize="0.5"
                style="?android:ratingBarStyleSmall"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />


            <TextView
                android:id="@+id/findSalonServiceTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total :"
                android:layout_below="@+id/findSalonPhone"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/findSalonType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/findSalonPhone"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#4caf50"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp">
            <Button
                android:id="@+id/salonInfo"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="View Salon"
                android:background="#4fc3f7"
                android:textColor="@android:color/white"
                android:layout_gravity="bottom"/>
                <Button
                    android:id="@+id/salonConfirmButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="Confirm"
                    android:layout_marginLeft="5dp"
                    android:background="#ffe0b2"
                    android:textColor="@android:color/black"
                    android:layout_gravity="bottom"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>