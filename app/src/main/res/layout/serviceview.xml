<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/serviceImage"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:src="@drawable/background"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <TextView
                android:id="@+id/serviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Of Service"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textColor="#42a5f5"/>

            <TextView
                android:id="@+id/serviceDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/serviceName"
                android:text="Service Description"
                android:textStyle="bold"

                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                />


            <TextView
                android:id="@+id/serviceOffers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Offers"
                android:layout_gravity="start|bottom"
                android:layout_above="@+id/serviceButtonsLayout"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:id="@+id/serviceButtonsLayout">
            <Button
                android:id="@+id/addServiceButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="Add"
                android:layout_marginBottom="5dp"
                android:background="#f00"
                android:textColor="@android:color/white"
                android:layout_weight="1"/>
                <Button
                    android:id="@+id/ServiceDetailsButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="Info"
                    android:layout_marginBottom="5dp"
                    android:background="#42a5f5"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>